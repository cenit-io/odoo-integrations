<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="view_sale_graph" model="ir.ui.view">
            <field name="name">view.sale.graph</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <graph string="Order by Integration" type="pie">
                    <field name="integration_id"/>
                </graph>
            </field>
        </record>

        <record id="view_sale_month_graph" model="ir.ui.view">
            <field name="name">view.sale.month.graph</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <graph string="Sale By Month" type="bar">
                    <field name="date_order" interval="month" type="row"/>
                </graph>
            </field>
        </record>

        <record id="view_product_graph" model="ir.ui.view">
            <field name="name">view.product.graph</field>
            <field name="model">product.product</field>
            <field name="arch" type="xml">
                <graph string="Variants by Product" type="pie">
                    <field name="product_tmpl_id"/>
                </graph>
            </field>
        </record>

        <record id="action_sale_order_report_all" model="ir.actions.act_window">
            <field name="name">Sale Order Analysis</field>
            <field name="res_model">sale.order</field>
            <!--            <field name="view_type">form</field>-->
            <field name="binding_view_types">form</field>
            <field name="view_mode">graph,tree</field>
            <field name="view_id" ref="view_sale_graph"/>
            <field name="help">This report performs analysis on your sales orders by integration</field>
        </record>

        <record id="action_sale_order_month_all" model="ir.actions.act_window">
            <field name="name">Sale Order By Month</field>
            <field name="res_model">sale.order</field>
            <!--            <field name="view_type">form</field>-->
            <field name="binding_view_types">form</field>
            <field name="view_mode">graph,tree</field>
            <field name="view_id" ref="view_sale_month_graph"/>
            <field name="help">This report performs analysis on your sales orders by month</field>
        </record>

        <record id="action_product_report_all" model="ir.actions.act_window">
            <field name="name">Variant Analysis</field>
            <field name="res_model">product.product</field>
            <!--            <field name="view_type">form</field>-->
            <field name="binding_view_types">form</field>
            <field name="view_mode">graph,tree</field>
            <field name="view_id" ref="view_product_graph"/>
            <field name="help">This report performs analysis on your variants by products</field>
        </record>

        <record id="board_sale_form_pm" model="ir.ui.view">
            <field name="name">board.sale.form</field>
            <field name="model">board.board</field>
            <field name="arch" type="xml">
                <form string="Sale Dashboard" version="7.0">
                    <board style="1-1">
                        <column>
                            <action name="%(action_sale_order_report_all)d" string="Sale Orders by Integration"/>
                            <action name="%(action_product_report_all)d" string="Variant by Product"/>
                        </column>
                        <column>
                            <action name="%(action_sale_order_month_all)d" string="Sale Orders by Month"/>
                        </column>

                    </board>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="open_action_board">
            <field name="name">Ecapi Dashboard</field>
            <field name="res_model">board.board</field>
            <!--            <field name="view_type">form</field>-->
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="board_sale_form_pm"/>
        </record>

        <menuitem action="open_action_board" id="sale_order_analysis" parent="menu_omna_data" sequence="0"/>

        <record id="omna_category_search_view_inherit" model="ir.ui.view">
            <field name="name">omna.category.search.inherit</field>
            <field name="model">product.category</field>
            <field name="inherit_id" ref="product.product_category_search_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='parent_id']" position="after">
                    <field name="omna_category_id" string="Ecapi ID"/>
                </xpath>
            </field>
        </record>

</odoo>