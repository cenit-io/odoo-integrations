<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="omna_attribute_tree_view" model="ir.ui.view">
        <field name="name">omna.product.attribute.tree</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.attribute_tree_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='create_variant']" position="after">
                <field name="omna_attribute_id"/>
            </xpath>
        </field>
    </record>

    <record id="omna_product_attribute_view_form" model="ir.ui.view">
        <field name="name">omna.product.attribute.form</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='main_fields']/field[@name='create_variant']" position="after">
                <field name="omna_attribute_id"/>
            </xpath>
        </field>
    </record>

</odoo>
