<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_sync_categories_wizard" model="ir.ui.view">
            <field name="name">omna.sync.categories.wizard.form</field>
            <field name="model">omna.sync_categories_wizard</field>
            <field name="arch" type="xml">
                <form string="Import Categories">
                    <group>
                        <div>
                            Wizard to import categories from OMNA.
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="sync_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="integration_id" required="1"/>
                            <field name="category_id" attrs="{'invisible': [('sync_type', '=', 'by_integration')],
                                   'required': [('sync_type', '!=', 'by_integration')]}"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Import Categories' name="sync_categories" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sync_categories_wizard" model="ir.actions.act_window">
            <field name="name">Import Categories</field>
            <field name="res_model">omna.sync_categories_wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sync_categories_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_omna_sync_categories" name="Import Categories"
                  parent="menu_omna_settings_alt" sequence="6"
                  action="action_sync_categories_wizard"/>



</odoo>
