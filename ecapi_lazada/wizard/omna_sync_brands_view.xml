<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_sync_brands_wizard" model="ir.ui.view">
            <field name="name">omna.sync.brands.wizard.form</field>
            <field name="model">omna.sync_brands_wizard</field>
            <field name="arch" type="xml">
                <form string="Import Brands">
                    <group>
                        <div>
                            Wizard to import brands from ECAPI.
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="sync_type" widget="radio"/>
                        </group>
                        <group>
                            <field name="integration_id" required="1"/>
                            <field name="brand_id" attrs="{'invisible': [('sync_type', '=', 'by_integration')],
                                   'required': [('sync_type', '!=', 'by_integration')]}"/>
                            <field name="quantity_max"/>
                        </group>
                    </group>
                    <footer>
                        <button string='Import Brands' name="sync_brands" type="object" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sync_brands_wizard" model="ir.actions.act_window">
            <field name="name">Import Brands</field>
            <field name="res_model">omna.sync_brands_wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sync_brands_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_omna_sync_brands" name="Import Brands"
                  parent="menu_omna_settings_alt" sequence="5"
                  action="action_sync_brands_wizard"/>



</odoo>
