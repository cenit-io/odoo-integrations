<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="omna_massive_variant_opt_view" model="ir.ui.view">
            <field name="name">omna.massive.variant.opt.form</field>
            <field name="model">omna.massive.variant.opt</field>
            <field name="arch" type="xml">
                <form string="Omna Massive Variant Operations">
                    <sheet>
                        <group>
                            <div>
                                Omna Massive Variant Operations.
                            </div>
                        </group>
                        <separator string="" colspan="8"/>
                        <group>
                            <group>
                                <field name="function_selection"/>
                            </group>
                            <group>
                                <field name="integration_id"/>
                            </group>
                        </group>
                        <separator string="" colspan="8"/>
                    </sheet>
                    <footer>
                        <button string="Execute Function" name="execute_function"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

