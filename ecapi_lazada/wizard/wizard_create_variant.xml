<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <record id="wizard_create_variant_view" model="ir.ui.view">
            <field name="name">wizard.create.variant.form</field>
            <field name="model">wizard.create.variant</field>
            <field name="arch" type="xml">
                <form string="Create New Variant">
                    <sheet>
                        <group>
<!--                            <field name="omna_product_id" invisible="1"/>-->
<!--                            <field name="omna_variant_id" invisible="1"/>-->
<!--                            <field name="product_template_id" invisible="1"/>-->
                            <group>
                                <!--<field name="external_id_integration_ids" invisible="1"/>-->
                                <field name="name"/>
                                <field name="default_code"/>
                                <field name="description"/>
                                <field name="lst_price"/>
                                <field name="standard_price"/>
                            </group>
                            <group>
                                <field name="quantity"/>
                                <field name="weight"/>
                                <field name="height"/>
                                <field name="length"/>
                                <field name="width"/>
                                <field name="content"/>
                                <!--<field name="external_id_integration_ids" invisible="1"/>-->
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Create New Variant" name="create_variant"
                                type="object" default_focus="1" class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

<!--        <record id="wizard_create_variant"-->
<!--                multi="True"-->
<!--                key2="client_action_multi" name="Create New Variant"-->
<!--                res_model="wizard.create.variant" src_model="product.template"-->
<!--                view_mode="form" target="new" view_type="form" model="ir.actions.act_window"/>-->


        <record id="wizard_create_variant" model="ir.actions.act_window">
            <field name="name">Create New Variant</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.create.variant</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="wizard_create_variant_view"/>
            <!-- TODO: check if we need this -->
            <field name="binding_model_id" ref="product.model_product_template" />
            <field name="binding_view_types">list</field>
        </record>

</odoo>
