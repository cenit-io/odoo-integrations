<?xml version="1.0" encoding="utf-8"?>
<odoo>


        <record id="view_sync_channels_wizard" model="ir.ui.view">
            <field name="name">omna.sync.channels.wizard.form</field>
            <field name="model">omna.sync_channels_wizard</field>
            <field name="arch" type="xml">
                <form string="Import Channels">
                    <group>
                        <div>
                            Wizard to import channels from OMNA.
                        </div>
                    </group>
                    <footer>
                        <button string='Import Channels' name="sync_channels" type="object"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_sync_channels_wizard" model="ir.actions.act_window">
            <field name="name">Import Channels</field>
            <field name="res_model">omna.sync_channels_wizard</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_sync_channels_wizard"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_omna_sync_channels" name="Import Channels"
                  parent="menu_omna_settings_alt" sequence="17"
                  action="action_sync_channels_wizard"/>



</odoo>
