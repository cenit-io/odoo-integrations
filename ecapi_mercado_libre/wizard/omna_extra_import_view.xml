<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_omna_extra_import_wizard" model="ir.ui.view">
        <field name="name">omna.extra.import.form</field>
        <field name="model">omna.extra.import</field>
        <field name="arch" type="xml">
            <form string="Ecapi Extra Import">
                <sheet>
                    <group>
                        <div>
                            Wizard to import non storable data from Ecapi.
                        </div>
                    </group>
                    <separator string="" colspan="8"/>
                    <group>
                        <group>
                            <field name="function_selection"/>
                        </group>
                        <group>
                            <field name="integration_id"/>
                        </group>
                    </group>
                    <separator string="" colspan="8"/>
                </sheet>
                <footer>
                    <button string='Execute function' name="execute_function" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>

            </form>
        </field>
    </record>

    <record id="action_omna_extra_import_wizard" model="ir.actions.act_window">
        <field name="name">Ecapi Extra Import</field>
        <field name="res_model">omna.extra.import</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_omna_extra_import_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_omna_extra_import" name="Ecapi Extra Import"
              parent="menu_omna_settings_alt" sequence="17"
              action="action_omna_extra_import_wizard"/>


</odoo>
