<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="view_omna_utilities_wizard" model="ir.ui.view">
        <field name="name">omna.utilities.form</field>
        <field name="model">omna.utilities</field>
        <field name="arch" type="xml">
            <form string="Ecapi Utilities">
                <group>
                    <div>
                        Wizard to access an extra functions in Ecapi.
                    </div>
                </group>
                <group>
                    <group>
                        <field name="function_selection"/>
                    </group>
                    <group>
                        <field name="integration_id"/>
                    </group>
                    <group>
                        <field name="omna_id"/>
                    </group>
                </group>
                <separator string="List separated by semicolon of products IDs in Ecapi." colspan="8"/>
                <field name="omna_ids" nolabel="1" colspan="8"/>
                <footer>
                    <button name="execute_action" type="object" class="btn btn-labeled btn-primary" role="button">
                        <span class="btn-label">
                            <i class="fa fa-bolt"></i>
                        </span>
                        Execute Function
                    </button>
                    <button class="btn btn-labeled btn-secondary" special="cancel" role="button">
                        <span class="btn-label">
                            <i class="fa fa-close"></i>
                        </span>
                        Cancel
                    </button>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_omna_utilities_wizard" model="ir.actions.act_window">
        <field name="name">Ecapi Utilities</field>
        <field name="res_model">omna.utilities</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_omna_utilities_wizard"/>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_omna_utilities" name="Ecapi Utilities"
              parent="menu_omna_settings_alt" sequence="16"
              action="action_omna_utilities_wizard"/>


</odoo>
