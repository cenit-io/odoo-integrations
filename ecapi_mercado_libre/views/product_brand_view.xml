<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="product_brand_search_form_view_inherit" model="ir.ui.view">
        <field name="name">product.brand.search.form</field>
        <field name="model">product.brand</field>
        <field name="inherit_id" ref="product_brand.product_brand_search_form_view" />
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="integration_id" />
                <field name="omna_brand_id" />
            </field>
        </field>
    </record>


    <record id="view_product_brand_form_inherit" model="ir.ui.view">
        <field name="name">product.brand.form</field>
        <field name="model">product.brand</field>
        <field name="inherit_id" ref="product_brand.view_product_brand_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[1]/group" position="after">
                <group>
                    <field name="omna_brand_id"/>
                </group>
            </xpath>
        </field>
    </record>


    <record id="view_product_brand_tree_inherit" model="ir.ui.view">
        <field name="name">product.brand.tree</field>
        <field name="model">product.brand</field>
        <field name="inherit_id" ref="product_brand.view_product_brand_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="integration_id"/>
                <field name="omna_brand_id"/>
            </field>
        </field>
    </record>

</odoo>
